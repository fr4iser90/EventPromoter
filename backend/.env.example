# üåç APP SETTINGS
NODE_ENV=production
PORT=4000

# Session signing (auth cookies/JWT-like session signature)
AUTH_SESSION_SECRET=CHANGE_ME_LONG_RANDOM_SECRET

# Secrets encryption at rest (stored platform credentials)
SECRETS_ENCRYPTION_KEY=CHANGE_ME_64_HEX_OR_LONG_RANDOM_STRING

# Callback auth for external publish event ingress (/api/publish/event)
PUBLISH_CALLBACK_SECRET=CHANGE_ME_CALLBACK_SECRET

# CORS (choose ONE strategy)
# - Reverse proxy only (recommended): set CORS_DISABLE=true
# - Or explicit origins: set CORS_ORIGINS and leave CORS_DISABLE=false
CORS_DISABLE=true
# CORS_ORIGINS=https://eventpromoter.example.com,https://admin.example.com

# User
APP_LOGIN_USER=admin
APP_LOGIN_PASSWORD=CHANGE_ME_ADMIN

# Review Reddit
APP_LOGIN_REVIEW_REDDIT_USER=review_reddit
APP_LOGIN_REVIEW_REDDIT_PASSWORD=CHANGE_ME_REVIEW_REDDIT
APP_LOGIN_REVIEW_REDDIT_PLATFORMS=reddit

# Review Meta
APP_LOGIN_REVIEW_META_USER=review_meta
APP_LOGIN_REVIEW_META_PASSWORD=CHANGE_ME_REVIEW_META
APP_LOGIN_REVIEW_META_PLATFORMS=facebook,instagram

# Review LinkedIn
APP_LOGIN_REVIEW_LINKEDIN_USER=review_linkedin
APP_LOGIN_REVIEW_LINKEDIN_PASSWORD=CHANGE_ME_REVIEW_LINKEDIN
APP_LOGIN_REVIEW_LINKEDIN_PLATFORMS=linkedin

# Review X
APP_LOGIN_REVIEW_X_USER=review_x
APP_LOGIN_REVIEW_X_PASSWORD=CHANGE_ME_REVIEW_X
APP_LOGIN_REVIEW_X_PLATFORMS=twitter

# üîí DATABASE (falls du sp√§ter eine DB hinzuf√ºgst)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eventpromoter
DB_USER=your_db_user
