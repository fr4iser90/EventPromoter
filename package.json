{
    "name": "eventpromoter",
    "version": "1.0.0",
    "description": "Multi-platform social media publisher with web interface",
    "private": true,
    "workspaces": [
      "frontend",
      "backend",
      "workflows"
    ],
    "scripts": {
      "install:all": "npm install",
      "build:all": "npm run build --workspaces",
      "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=backend\"",
      "dev:clean": "./dev-clean.sh",
      "dev:frontend": "npm run dev --workspace=frontend",
      "dev:backend": "npm run dev --workspace=backend",
      "build:frontend": "npm run build --workspace=frontend",
      "build:backend": "npm run build --workspace=backend",
      "build:workflows": "npm run build --workspace=workflows",
      "clean": "npm run clean --workspaces",
      "docker:build": "docker-compose build",
      "docker:up": "docker-compose up -d",
      "docker:up:build": "docker-compose up -d --build",
      "docker:down": "docker-compose down",
      "docker:logs": "docker-compose logs -f",
      "docker:traefik:build": "docker-compose -f docker-compose.traefik.yml build",
      "docker:traefik:up": "docker-compose -f docker-compose.traefik.yml up -d",
      "docker:traefik:up:build": "docker-compose -f docker-compose.traefik.yml up -d --build",
      "docker:traefik:down": "docker-compose -f docker-compose.traefik.yml down",
      "docker:traefik:logs": "docker-compose -f docker-compose.traefik.yml logs -f",
      "test": "npm run test --workspaces",
      "lint": "npm run lint --workspaces",
      "lint:fix": "npm run lint:fix --workspaces"
    },
    "devDependencies": {
      "concurrently": "^8.2.2"
    },
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=9.0.0"
    },
    "author": "fr4iser",
    "license": "MIT"
  }